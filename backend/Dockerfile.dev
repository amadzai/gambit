FROM node:20-slim

RUN apt-get update && apt-get install -y openssl curl procps stockfish \
  && rm -rf /var/lib/apt/lists/*

# Debian installs stockfish to /usr/games; add to PATH so spawn('stockfish') finds it
ENV PATH="/usr/games:${PATH}"

WORKDIR /app

RUN npm install -g pnpm

COPY package.json pnpm-lock.yaml ./
COPY prisma ./prisma/

RUN pnpm install

COPY . .

RUN pnpm exec prisma generate

EXPOSE 3001

CMD ["/bin/sh", "-c", "pnpm run start:dev"]
